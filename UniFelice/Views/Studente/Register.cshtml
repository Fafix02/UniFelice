@model string

@{
    ViewData["Title"] = "Registrazione Voto";
}

@if (Model.Length != 0)
{
    <h1>@Model</h1>
}

<h1>Registrazione nuovo voto sul libretto: </h1>
<form method="post" asp-area="" asp-controller="Studente" asp-action="Check">
    <label for="txtMat">Matricola:</label>
    <input type="text" id="txtMat" name="Matricola" /> <br />
    <label for="numVoto">Valutazione:</label>
    <input type="number" id="numVoto" name="VotoValutazione" value="18" min="18" max="33"/> <br />
    <label for="txtAppello">Codice Appello:</label>
    <input type="text" id="txtAppello" name="CodAppello" /> <br />
    <input type="submit" value="Insresci valutazione"/>
</form>